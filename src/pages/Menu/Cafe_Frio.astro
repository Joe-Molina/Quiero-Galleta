---
import Layout from "../../layouts/Layout.astro";
import { HeaderNav } from "../../components/header.jsx";
import HeroImg from "../../components/menu/heroImg.astro";
import Footer from "../../components/footer.astro";
import CardBebida from "../../components/menu/bebidas/CardCafeFrio.astro";
import { Frio } from "../../info/bebidas.js";
---

<Layout title="Bebidas Cafe Frio">
  <HeaderNav client:visible />
  <HeroImg
    title="Cafe Frio"
    bg="bg-[url('/bebidas/frio.png')] lg:bg-[url('/bebidas/frioD.png')]"
  />
  <article
    class="my-2 bg-white py-2 px-8 mx-4 text-center shadow-xl rounded-lg lg:w-96 lg:mx-auto lg:my-5"
  >
    <h3 class="font-normal">Agrega crema batida por solo 0,50$</h3>
  </article>
  <section
    class="flex flex-col lg:flex-row lg:flex-wrap lg:max-w-[1280px] lg:mx-auto lg:justify-center lg:mb-5"
  >
    {
      Frio.map((bebida) => (
        <CardBebida
          name={bebida.name}
          details={bebida.details}
          price={bebida.price}
          add={bebida.add}
        />
      ))
    }
    <figure class="m-3 lg:hidden">
      <img src="/fondos/galletasfondo2.png" alt="" class="rounded-2xl" />
    </figure>
  </section>

  <Footer />
</Layout>
