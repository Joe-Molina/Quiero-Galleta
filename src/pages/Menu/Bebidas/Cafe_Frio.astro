---
import Layout from "../../../layouts/Layout.astro";
import { HeaderNav } from "../../../components/header.jsx";
import HeroImg from "../../../components/menu/heroImg.astro";
import Footer from "../../../components/footer.astro";
import CardBebida from "../../../components/menu/bebidas/CardCafeFrio.astro";
import { Frio } from "../../../info/bebidas.js";
---

<Layout title="Bebidas Cafe Frio">
  <HeaderNav client:visible />
  <HeroImg title="Cafe Frio" linkImg="/fondos/galletasfondo.png" />
  <article
    class="mt-16 bg-white py-2 px-8 mx-4 text-center shadow-xl rounded-lg"
  >
    <h3 class="font-normal">Agrega crema batida por solo 4,50$</h3>
  </article>
  <section class="flex flex-col">
    {
      Frio.map((bebida) => (
        <CardBebida
          name={bebida.name}
          details={bebida.details}
          price={bebida.price}
          add={bebida.add}
        />
      ))
    }
    <figure class="m-3">
      <img src="/fondos/galletasfondo2.png" alt="" class="rounded-2xl" />
    </figure>
  </section>

  <Footer />
</Layout>
