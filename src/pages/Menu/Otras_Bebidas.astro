---
import Layout from "../../layouts/Layout.astro";
import { HeaderNav } from "../../components/header.jsx";
import HeroImg from "../../components/menu/heroImg.astro";
import Footer from "../../components/footer.astro";
import CardBebida from "../../components/menu/bebidas/Otras_Bebidas.astro";
import { Otrasbebidas } from "../../info/bebidas.js";
---

<Layout title="Bebidas Cafe caliente">
  <HeaderNav client:visible />
  <HeroImg
    title="Cafe caliente"
    bg="bg-[url('/bebidas/otras.png')] lg:bg-[url('/bebidas/OtrasBebidasD.png')]"
  />

  <section
    class="flex flex-col lg:flex-row lg:flex-wrap lg:max-w-[1280px] lg:mx-auto lg:justify-center lg:mb-5"
  >
    {
      Otrasbebidas.map((bebida) => (
        <CardBebida
          name={bebida.name}
          details={bebida.details}
          price={bebida.price}
        />
      ))
    }
    <figure class="m-3 lg:hidden">
      <img src="/fondos/galletasfondo2.png" alt="" class="rounded-2xl" />
    </figure>
  </section>

  <Footer />
</Layout>
