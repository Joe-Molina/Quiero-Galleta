---
import Layout from "../../layouts/Layout.astro";
import { HeaderNav } from "../../components/header";
import HeroImg from "../../components/menu/heroImg.astro";
import Footer from "../../components/footer.astro";
import { CardPrice } from "../../components/menu/CardPrice.jsx";
import CardProduct from "../../components/menu/CardProduct.astro";
import { brownies } from "../../info/brownies.js";
import { preciosBrownies } from "../../info/precios.js";
---

<Layout title="QG Menu de Galletas">
  <HeaderNav client:visible />
  <HeroImg title="Brownies" bg="bg-[url('/fondos/brownies.png')]" />
  <article
    class="my-2 bg-white py-2 px-8 mx-4 text-center shadow-xl rounded-lg lg:w-96 lg:mx-auto lg:my-5"
  >
    <h3 class="font-bold">Precios</h3>
    {
      preciosBrownies.map((data) => (
        <CardPrice precio={data.precio} cantidad={data.cantidad} />
      ))
    }
  </article>
  <section class="flex flex-col lg:flex-row lg:justify-center lg:mb-10">
    {
      brownies.map((galleta) => (
        <CardProduct
          title={galleta.title}
          img={galleta.img}
          text={galleta.text}
        />
      ))
    }
    <figure class="m-3 lg:hidden">
      <img src="/fondos/galletasfondo2.png" alt="" class="rounded-2xl" />
    </figure>
  </section>

  <Footer />
</Layout>
