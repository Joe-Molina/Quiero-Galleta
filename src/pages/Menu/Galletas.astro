---
import Layout from "../../layouts/Layout.astro";
import { HeaderNav } from "../../components/header";
import HeroImg from "../../components/menu/heroImg.astro";
import Footer from "../../components/footer.astro";
import MenuSection from "../../components/menu/menuGalleta.astro";
---

<Layout title="QG Menu de Galletas">
  <HeaderNav client:visible />
  <HeroImg title="Galletas" bg="bg-[url('/fondos/fondo1.svg')]" />
  <p
    class="my-2 bg-white py-2 px-8 mx-8 text-center shadow-lg rounded-lg lg:w-96 lg:mx-auto lg:my-5"
  >
    Todas nuestras galletas pesan entre 70 y 80 gramos
  </p>
  <section class="flex flex-col lg:flex-row lg:justify-center lg:mb-10">
    <MenuSection
      link="Monstruosas"
      titulo="Monstruosas"
      img="/galletas/monstruosas/nutella_sal_marina.png"
      colorandflex="bg-red-200"
    />
    <MenuSection
      link="Especiales"
      titulo="Especiales"
      img="/galletas/especiales/DulceDeLeche.png"
      colorandflex="bg-blue-200 flex-row-reverse"
    />
    <MenuSection
      link="Saludables"
      titulo="Saludables"
      img="/galletas/saludables/ChispasDeChocolateSaludable.png"
      colorandflex="bg-green-200"
    />
  </section>
  <figure class="m-3 lg:hidden">
    <img src="/fondos/Mverde.png" alt="" class="rounded-2xl" />
  </figure>

  <Footer />
</Layout>
