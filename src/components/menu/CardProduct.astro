---
interface props {
  img: String;
  title: String;
  text: string;
}

const { img, title, text } = Astro.props;
---

<article
  class="mx-2 my-4 shadow-xl rounded-xl overflow-hidden border-2 lg:w-96 lg:hover:scale-105 transition"
>
  <figure class="px-10 py-3">
    <img class="drop-shadow-xl" src={img} alt="" />
  </figure>
  <div class="text-center p-3 bg-neutral-50">
    <h3 class="font-bold">{title}</h3>
    <p class="text-xs text-zinc-500">{text}</p>
  </div>
</article>
