---
interface Props {
  titulo: String;
  tipoBebida: String;
  link: string;
}

const { titulo, tipoBebida, link } = Astro.props;
---

<a href={link}>
  <article
    class=`flex items-center justify-between h-32 m-3 rounded-xl shadow-md overflow-hidden lg:flex-col-reverse lg:w-96 lg:h-96 lg:shadow-lg`
  >
    <div
      class="flex justify-center items-center h-full w-7/12 bg-white lg:w-full lg:h-20"
    >
      <p class="text-2xl font-normal">{titulo}</p>
    </div>
    <figure class=`h-full w-5/12 lg:w-full ${tipoBebida} bg-no-repeat bg-cover`>
    </figure>
  </article>
</a>
