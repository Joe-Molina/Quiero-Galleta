---
interface Props {
  titulo: String;
  tipoBebida: String;
  link: string;
}

const { titulo, tipoBebida, link } = Astro.props;
---

<a href={link}>
  <article
    class=`flex items-center justify-between h-32 m-3 rounded-xl shadow-lg overflow-hidden `
  >
    <div class="flex justify-center items-center h-full w-7/12 bg-white">
      <p class="text-2xl font-normal">{titulo}</p>
    </div>
    <figure class=`h-full w-5/12 ${tipoBebida} bg-no-repeat bg-cover`></figure>
  </article>
</a>
